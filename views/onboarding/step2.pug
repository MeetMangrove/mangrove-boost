extends ../layout

block content
  .row
    .col-md-6.col-md-offset-3
      .main-container
        .row.justify-content-md-center
          .col-md-6.col-md-offset-3
            ul.loader
              li.point.active
              li.point.active
              li.point
        h2 Nice to meet you #{user.profile.name}! 👋
        br
        h4 Where do you want to spread the vibe?
        br
        br
        .row
          .col-md-6
            if !user.twitter 
              a.btn.btn-block.btn-twitter.btn-social(href='/auth/twitter')
                i.fa.fa-twitter
                  | Sign in with Twitter
            else
              | You are already linked your Twitter account 🏄🏻
          .col-md-6
            if !user.facebook
              a.btn.btn-block.btn-facebook.btn-social(href='/auth/facebook')
                i.fa.fa-facebook
                  | Sign in with Facebook
            else
              | You are already linked your Facebook account 🏄🏻
