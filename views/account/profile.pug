extends ../layout

block content
  .row
    .col-md-6.col-md-offset-3
      .main-container
        h3 My account
        br
        if !user.slack
          .row.justify-content-md-center
            .col-sm-12.justify-content-md-center
              a.btn.btn-block.btn-slack.btn-social(href='/auth/slack') 
                i.fa.fa-slack 
                | Link your Slack account
        if !user.twitter
          .row.justify-content-md-center.mt5
            .col-sm-12.justify-content-md-center
              a.btn.btn-block.btn-twitter.btn-social.text-center(href='/auth/twitter') 
                i.fa.fa-twitter
                | Link your Twitter account    
              br  
              small (No content will be tweeted without your approval)
            .row
              .col-sm-12.justify-content-md-center
                p
        if user.twitter
          .row.justify-content-md-center
            .col-sm-12
              a.unlink-link(href='/account/unlink/twitter') ❌ Unlink your Twitter account
        if user.slack
          .row.justify-content-md-center
            .col-sm-12.justify-content-md-center
              a.unlink-link(href='/account/unlink/slack') 👋 Unlink your Slack account
        .row.justify-content-md-center
          .col-sm-12.justify-content-md-center
            a.unlink-link(href='/contact') ☝️ Send some feedback
        .row.justify-content-md-center
          .col-sm-12.justify-content-md-center
            a.unlink-link(href='https://www.google.fr/maps/search/mojito/') 🍸Go drink a mojito
        .row.justify-content-md-center
          .col-sm-12.justify-content-md-center
            a.unlink-link(href='/logout') 🙈 logout
