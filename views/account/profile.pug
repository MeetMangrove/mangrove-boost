extends ../layout

block content
  .row
    .col-md-6.col-md-offset-3
      .main-container
        h3 ðŸ¤™ Hey #{user.profile.firstName}
        br
        form.form-horizontal(action='/account/profile', method='POST')
          input(type='hidden', name='_csrf', value=_csrf)
          .form-group
            label.col-sm-3.control-label(for='email') Email
            .col-sm-7
              input.input-plain-grey(type='email', name='email', id='email', value=user.email)
          .form-group
            .col-sm-offset-3.col-sm-4
              button.btn.btn.btn-primary(type='submit')
                i.fa.fa-pencil
                | Change Email
        br
        h3 Change Password
        br
        form.form-horizontal(action='/account/password', method='POST')
          input(type='hidden', name='_csrf', value=_csrf)
          .form-group
            label.col-sm-3.control-label(for='password') New Password
            .col-sm-7
              input.input-plain-grey(type='password', name='password', id='password')
          .form-group
            label.col-sm-3.control-label(for='confirmPassword') Confirm Password
            .col-sm-7
              input.input-plain-grey(type='password', name='confirmPassword', id='confirmPassword')
          .form-group
            .col-sm-offset-3.col-sm-4
              button.btn.btn-primary(type='submit')
                i.fa.fa-lock
                | Change Password
        br
        h3 UnLinked Accounts
        br
        if !user.slack
          .row.justify-content-md-center
            .col-sm-12
              a.btn.btn-block.btn-slack.btn-social(href='/auth/slack') 
                i.fa.fa-slack 
                | Link your Slack account
        if !user.facebook
          .row.justify-content-md-center
            .col-sm-12
              a.btn.btn-block.btn-facebook.btn-social.text-center(href='/auth/facebook') 
                i.fa.fa-facebook 
                | Link your Facebook account
        if !user.twitter
          .row.justify-content-md-center
            .col-sm-12
              a.btn.btn-block.btn-twitter.btn-social.text-center(href='/auth/twitter') 
                i.fa.fa-twitter
                | Link your Twitter account      
        br        
        h3 Linked Accounts
        br
        if user.slack
          .row.justify-content-md-center
            .col-sm-12.justify-content-md-center
              a.btn.btn-block.btn-danger.btn-social.text-center(href='/account/unlink/slack') 
                i.fa.fa-slack 
                | Unlink your Slack account
        if user.facebook
          .row.justify-content-md-center
            .col-sm-12.justify-content-md-center
              a.btn.btn-block.btn-facebook.btn-social.text-center(href='/account/unlink/facebook') 
                i.fa.fa-facebook
                | Unlink your Facebook account
        if user.twitter
          .row.justify-content-md-center
            .col-sm-12
              a.btn.btn-block.btn-danger.btn-social.text-center(href='/account/unlink/twitter') 
                i.fa.fa-twitter
                | Unlink your Twitter account
        br
        br          
        hr
        .row
          .col-md-12
            form.form-horizontal(action='/account/delete', method='POST')
              p You can delete your account, but keep in mind this action is irreversible.
              input(type='hidden', name='_csrf', value=_csrf)
              button.btn.btn-danger(type='submit')
                i.fa.fa-trash
                | Delete my account
